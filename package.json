{
	"id":"com.moimz.imodule.module.popup",
	"icon":"xi-windows",
	"title":{
		"ko":"팝업관리"
	},
	"version":"3.0.0",
	"description":{
		"ko":"팝업창을 생성하고 홈페이지에 게시한다."
	},
	"author":{
		"name":"Arzz",
		"email":"arzz@arzz.com"
	},
	"homepage":"https://www.imodules.io",
	"versionChecker":"https://api.moimz.com/download/latest",
	"dependencies":{
		"core":"3.0.0"
	},
	"language":"ko",
	"admin":true,
	"global":true,
	"configs":{
		"templet":{
			"type":"templet",
			"default":"default"
		},
		"auto_layer":{
			"type":"boolean",
			"default":false
		},
		"window_x":{
			"type":"int",
			"default":0
		},
		"window_y":{
			"type":"int",
			"default":0
		},
		"layer_x":{
			"type":"int",
			"default":0
		},
		"layer_y":{
			"type":"int",
			"default":0
		}
	},
	"databases":{
		"popup_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11,
					"comment":"고유값"
				},
				"domain":{
					"type":"varchar",
					"length":100,
					"comment":"팝업게시사이트도메인"
				},
				"language":{
					"type":"varchar",
					"length":2,
					"comment":"팝업게시사이트언어셋"
				},
				"title":{
					"type":"varchar",
					"length":100,
					"comment":"팝업명"
				},
				"type":{
					"type":"enum",
					"length":"'HTML','LINK','IMAGE','EXTERNAL'",
					"default":"HTML",
					"comment":"팝업내용종류"
				},
				"window":{
					"type":"enum",
					"length":"'WINDOW','LAYER'",
					"default":"WINDOW",
					"comment":"팝업형태"
				},
				"start_date":{
					"type":"int",
					"length":11,
					"comment":"팝업게시시작일"
				},
				"end_date":{
					"type":"int",
					"length":11,
					"comment":"팝업게시종료일"
				},
				"size":{
					"type":"varchar",
					"length":10,
					"comment":"팝업크기"
				},
				"position":{
					"type":"varchar",
					"length":10,
					"comment":"팝업위치"
				},
				"content":{
					"type":"longtext",
					"comment":"팝업내용"
				},
				"reg_date":{
					"type":"int",
					"length":11,
					"comment":"등록일"
				}
			},
			"indexes":{
				"idx":"primary_key",
				"domain,language,start_date,end_date":"index"
			},
			"auto_increment":"idx",
			"comment":"팝업 팝업게시 테이블"
		},
		"popup_admin_table":{
			"columns":{
				"midx":{
					"type":"int",
					"length":11,
					"comment":"관리자"
				},
				"domain":{
					"type":"varchar",
					"length":100,
					"comment":"관리도메인"
				}
			},
			"indexes":{
				"midx,domain":"primary_key"
			},
			"comment":"팝업 관리자 테이블"
		}
	}
}