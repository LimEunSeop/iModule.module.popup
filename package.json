{
	"id":"com.moimz.imodule.module.popup",
	"icon":"xi-windows",
	"title":{
		"ko":"팝업관리"
	},
	"version":"3.0.0",
	"description":{
		"ko":"팝업창을 생성하고 홈페이지에 게시한다."
	},
	"author":{
		"name":"Arzz",
		"email":"arzz@arzz.com"
	},
	"homepage":"https://www.imodule.kr",
	"versionChecker":"http://www.moimz.com/ko/api/moimz/getLatest",
	"dependencies":{
		"core":"3.0.0",
		"attachment":"3.0.0",
		"keyword":"3.0.0"
	},
	"language":"ko",
	"admin":true,
	"context":false,
	"global":true,
	"article":false,
	"widget":false,
	"include":false,
	"configs":{
		"templet":{
			"type":"string",
			"value":"default"
		},
		"auto_layer":{
			"type":"boolean",
			"value":false
		},
		"window_x":{
			"type":"int",
			"value":0
		},
		"window_y":{
			"type":"int",
			"value":0
		},
		"layer_x":{
			"type":"int",
			"value":0
		},
		"layer_y":{
			"type":"int",
			"value":0
		}
	},
	"databases":{
		"popup_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11
				},
				"domain":{
					"type":"varchar",
					"length":50
				},
				"language":{
					"type":"varchar",
					"length":2
				},
				"title":{
					"type":"varchar",
					"length":100
				},
				"type":{
					"type":"enum",
					"length":"'HTML','LINK','IMAGE','EXTERNAL'",
					"default":"HTML"
				},
				"window":{
					"type":"enum",
					"length":"'WINDOW','LAYER'",
					"default":"WINDOW"
				},
				"start_date":{
					"type":"int",
					"length":11
				},
				"end_date":{
					"type":"int",
					"length":11
				},
				"size":{
					"type":"varchar",
					"length":10
				},
				"position":{
					"type":"varchar",
					"length":10
				},
				"content":{
					"type":"longtext"
				},
				"reg_date":{
					"type":"int",
					"length":11
				}
			},
			"indexes":{
				"idx":"primary_key",
				"start_date,end_date":"index"
			},
			"auto_increment":"idx"
		}
	}
}